<%- include('header') %>

<%- include('message') %>

<div class="p-3">
    <h3>Felhasználók</h3>
    <hr>
    <table class="table table-striped table-hovered">
        <thead>
            <tr>
                <th>#</th>
                <th>Név</th>
                <th>E-mail cím</th>
                <th>Csatlakozás dátuma</th>
                <th>Hozzáférés</th>
                <th class="text-end">Müveletek</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(function(user, index) { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.membership_date %></td>
                    <td><%= user.role %></td>
                    <td class="text-end">
                        <a href="/users/edit/<%= user.id %>" class="btn btn-sm btn-primary">Szerkesztés</a>
                        <a href="/users/delete/<%= user.id %>" class="btn btn-sm btn-danger">Törlés</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
        <tfoot>
            <tr>
            <td colspan="6">Összesen: <strong><!--- TODO: ide is --></strong> felhasználó</td>
            </tr>
        </tfoot>
    </table>
</div>

<%- include('footer') %>