<%- include('header') %>

<%- include('message') %>

<div class="p-3">
    <h3>Felhasználók</h3>
    <hr>
    <table class="table table-striped table-hovered">
        <thead>
            <tr>
                <th>Név</th>
                <th>E-mail cím</th>
                <th>Csatlakozás dátuma</th>
                <th>Hozzáférés</th>
                <th class="text-end">Müveletek</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(function(user) { %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.membership_date %></td>
                    <td><%= user.role %></td>
                    <td class="text-end">
                        <a href="/users/edit/<%= user.ID %>" class="btn btn-sm btn-primary">Szerkesztés</a>
                        <form action="/users/delete/<%= user.ID %>" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-danger">Törlés</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<%- include('footer') %>
