<%- include('header') %>

<div class="col-lg-5">
    <h1>Top felhasználók</h1>
    <table class="table table-striped table-hovered">
        <thead>
            <tr>
                <th>ID</th>
                <th class="text-center">Név</th>
                <th class="text-center">Kölcsönzések száma</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.ID %></td>
                    <td class="text-center"><%= user.name %></td>
                    <td class="text-center"><%= user.rentalCount %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <h1>Top Items</h1>
    <table class="table table-striped table-hovered">
        <thead>
            <tr>
                <th>ID</th>
                <th class="text-center">Cím</th>
                <th class="text-center">Kölcsönzések száma</th>
            </tr>
        </thead>
        <tbody>
            <% items.forEach(item => { %>
                <tr>
                    <td><%= item.ID %></td>
                    <td class="text-center"><%= item.title %></td>
                    <td class="text-center"><%= item.rentalCount %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>



<%- include('footer') %>